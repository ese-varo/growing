noteContainer = document.getElementById('note-container');
noteContainer.innerHTML = "<%= j render 'note/note', day_habit: @day_habit %>";
checkpointContainer = document.getElementById('checkpoint-container');
checkpointContainer.innerHTML = "<%= j render 'checkpoint/checkpoint', day: @day_habit %>";
